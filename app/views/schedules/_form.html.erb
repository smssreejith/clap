<%= simple_form_for(@schedule) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%# f.association :customer %>
    <%= f.input :customer_id, as: :hidden, input_html: { value: params[:customer] } %>
    <%= f.input :booking_id, as: :hidden, input_html: { value: params[:booking] } %>
    <%= f.input :pack_id, as: :hidden, input_html: { value: params[:pack] } %>
    <%# f.association :booking %>
    <%# f.association :pack %>
    <%= f.association :employee %>
    <%= f.input :appointment %>
    <%= f.input :status, as: :radio_buttons %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

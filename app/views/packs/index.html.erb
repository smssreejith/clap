<p id="notice"><%= notice %></p>

<h1>Packs</h1>

<table class="responstable">
  <thead>
    <tr>
      <th>Name</th>
      <th>Amount</th>
      <th>No of appointments</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @packs.each do |pack| %>
      <tr>
        <td><%= pack.name %></td>
        <td><%= pack.amount %></td>
        <td><%= pack.no_of_appointments %></td>
        <td>
          <%= link_to 'Show', pack %>
          <%= link_to 'Edit', edit_pack_path(pack) %>
          <%= link_to 'Destroy', pack, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pack', new_pack_path %>

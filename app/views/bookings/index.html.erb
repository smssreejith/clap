<p id="notice"><%= notice %></p>

<h1>Bookings</h1>
<%= link_to 'New Booking', new_booking_path %>

<table class="responstable">
  <thead>
    <tr>
      <th>Customer</th>
      <th>Pack</th>
      <th>No of pack</th>
      <th>Amount</th>
      <th>Amount Paid</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.customer.name %></td>
        <td><%= booking.pack.name %></td>
        <td><%= booking.no_of_pack %></td>
        <td><%= booking.amount %></td>
        <td><%= booking.amount_paid %></td>
        <td>
          <%= link_to 'Show', booking %>
          <%= link_to 'Edit', edit_booking_path(booking) %>
          <%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @bookings %>
